{% extends 'layouts/baseEmployee.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block content %}
    <div class="mt-24 md:ml-64 px-4 sm:px-6 lg:px-8">
        <h1 class="text-2xl font-bold mb-6">Bienvenue sur le tableau de bord</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white shadow rounded-lg p-4">
                <h2 class="text-lg font-semibold">Réservations aujourd'hui</h2>
                <p class="text-4xl font-bold mt-4 text-blue-600">{{ reservationsCount }}</p>
            </div>

            <div class="bg-white shadow rounded-lg p-4">
                <h2 class="text-lg font-semibold">Séances prévues</h2>
                <p class="text-4xl font-bold mt-4 text-green-600">{{ sessionsCount }}</p>
            </div>

            <div class="bg-white shadow rounded-lg p-4">
                <h2 class="text-lg font-semibold">Revenus du jour</h2>
                <p class="text-4xl font-bold mt-4 text-yellow-600">{{ revenue | number_format(2, ',', ' ') }} €</p>
            </div>
        </div>

        <div class="mt-12">
            <h2 class="text-xl font-bold mb-4">Prochaines séances</h2>
            <table class="min-w-full bg-white shadow rounded-lg">
                <thead class="bg-gray-100">
                <tr>
                    <th class="text-left p-4">Film</th>
                    <th class="text-left p-4">Date</th>
                    <th class="text-left p-4">Heure</th>
                    <th class="text-left p-4">Salle</th>
                </tr>
                </thead>
                <tbody>
                {% for session in nextSessions %}
                    <tr>
                        <td class="p-4">{{ session.film.title }}</td>
                        <td class="p-4">{{ session.startDate|date('d/m/Y') }}</td>
                        <td class="p-4">{{ session.startDate|date('H:i') }}</td>
                        <td class="p-4">{{ session.room.number }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="p-4" colspan="4">Aucune séance prévue.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

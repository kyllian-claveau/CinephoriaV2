{% extends 'layouts/base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block content %}
    <section id="contact" class="pt-20 py-6 bg-gray-800">
        <div class="max-w-7xl mx-auto">
            <h2 class="text-3xl font-extrabold text-yellow-500 text-center">Nous contacter</h2>
            <p class="mt-4 text-lg text-white text-center">Si vous avez un problème ou une question, n'hésitez pas à nous envoyer un message.</p>

            <form method="post" action="{{ path('app_contact') }}" class="mt-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nom d'utilisateur -->
                    <div>
                        <label for="username" class="block text-lg text-white">Nom d'utilisateur (facultatif)</label>
                        <input type="text" name="username" id="username" class="block w-full p-2 mt-2 rounded-lg bg-gray-700 text-white" value="{{ form.username.vars.value }}">
                    </div>

                    <!-- Titre de la demande -->
                    <div>
                        <label for="title" class="block text-lg text-white">Titre de la demande</label>
                        <input type="text" name="title" id="title" class="block w-full p-2 mt-2 rounded-lg bg-gray-700 text-white" value="{{ form.title.vars.value }}">
                    </div>
                </div>

                <div class="mt-6">
                    <!-- Description -->
                    <label for="description" class="block text-lg text-white">Description</label>
                    <textarea name="description" id="description" rows="4" class="block w-full p-2 mt-2 rounded-lg bg-gray-700 text-white">{{ form.description.vars.value }}</textarea>
                </div>

                <div class="mt-6 text-center">
                    <button type="submit" class="bg-yellow-500 hover:bg-yellow-400 text-black py-2 px-4 rounded-full text-lg font-semibold transition-all">
                        Envoyer
                    </button>
                </div>
            </form>
        </div>
    </section>

    <footer class="bg-black py-6 text-center text-gray-500">
        <p>&copy; 2025 Cinéphoria. Tous droits réservés.</p>
        <p>Adresse (Siège social) : 123 Avenue des Films, 75000 Paris</p>
        <p>Numéro de GSM : 01 23 45 67 89</p>
        <p>Horaires : Lundi - Dimanche: 10h00 - 23h00</p>
    </footer>
{% endblock %}
